[ req ]
default_bits       = 4096
prompt             = no
default_md         = sha256
req_extensions     = v3_req
x509_extensions    = v3_ca
distinguished_name = dn

[ dn ]
CN = localhost

[ v3_req ]
subjectAltName = @alt_names

[ v3_ca ]
subjectAltName    = @alt_names
basicConstraints  = critical, CA:TRUE
keyUsage          = critical, keyCertSign, cRLSign, digitalSignature, keyEncipherment

[ alt_names ]
DNS.1 = localhost
IP.1  = 127.0.0.1
